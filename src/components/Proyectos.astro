---
import GitHub from "./icons/GitHub.astro";
import LinkButton from "./LinkButton.astro";



const PROYECTOS =[
    {
    title: 'Interfaz Visual Jira',
    description: 'Una interfaz grafica para visualizar los tickets recibidos en X proyecto de Jira. Permite filtrar por estado, prioridad y tipo de ticket.',
    github:'https://github.com/Eyra0405/webtickets',
    image: '/projects/proyecto.webp',
    tags: ['Python', 'Jira', 'API', 'Angular', 'HTML', 'CSS', 'TypeScript']
    }
    ,
    {
    title: 'Formulario crea plantilla en Excel',
    description: 'Es un formulario en el cual rellenas los campos y te crea las carpetas automaticamente y te genera un excel con 3 hojas, con la informacion que has ido añadiento',
    github:'https://github.com/Eyra0405/Formulario',
    image: '/projects/formulario.webp',
    tags: ['Node.js', 'Express', 'XLSX','HTML', 'CSS', 'JavaScript']
    }
]
---
<div class="flex flex-col gap-y-16">
  {
    PROYECTOS.map(({ image, title, description, tags, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-300 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-400 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>